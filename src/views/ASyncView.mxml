			protected function handleDeleteDB( evt:Event):void {
				Model.closeLocalDB();
				
				var dbf:File = AppSettings.databaseStorage.resolvePath( Model.dbFile);
				dbf.deleteFile();				
				debug ( "deleted DB ["+dbf.nativePath+"]");
	
